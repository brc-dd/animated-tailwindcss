{
  "private": true,
  "scripts": {
    "audit:fix": "npx npm-check-updates -u; npm i --package-lock-only; npm audit fix; rm yarn.lock; yarn import; rm package-lock.json",
    "prebuild": "ttsc",
    "build": "NODE_OPTIONS='--unhandled-rejections=strict' ts-node --skip-project build.ts",
    "postinstall": "patch-package",
    "prelint": "yarn prettify",
    "lint": "eslint . --ext .ts --fix --ignore-path .gitignore 1>/dev/null",
    "postlint": "[ -z \"$(git status --porcelain)\" ]",
    "lint:staged": "lint-staged --allow-empty --concurrent 1",
    "prepare": "husky install",
    "preprettify": "git ls-files '*.js' '*.ts' '*.json' | xargs sed -i ':a;N;$!ba;s/{\\s*\\n/{ /g'",
    "prettify": "prettier --write . --ignore-path .gitignore --loglevel warn",
    "postprettify": "prettier-package-json --write package*.json",
    "prerelease": "yarn lint && yarn build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "csstype": "^3.0.9",
    "esbuild": "^0.13.9",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "patch-package": "^6.4.7",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "release-it": "^14.11.6",
    "release-it-yarn-workspaces": "^2.0.1",
    "ts-node": "^10.4.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.4.4"
  }
}

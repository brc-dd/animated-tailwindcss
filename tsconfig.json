{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": { "@/*": ["*"] },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "rootDir": "src",
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build.ts"]
}
